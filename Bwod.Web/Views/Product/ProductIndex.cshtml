@model IEnumerable<Bwod.Web.Models.ProductViewModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Produtos</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus" style="margin-right: 5px"></i>Cadastrar Produto
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th style="width: 40%">Nome</th>
                <th style="width: 30%">Categoria</th>
                <th>Preço</th>
                <th style="width: 10%">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.name
                    </td>
                    <td>
                        @item.category_name
                    </td>
                    <td>
                        @item.price.ToString("C")
                    </td>
                    <td>
                        <a asp-action="ProductUpdate" class="btn btn-success" asp-route-id="@item.id">
                            <i class="fas fa-edit"></i>
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="ProductDelete" class="btn btn-danger" asp-route-id="@item.id">
                                <i class="fas fa-trash"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>